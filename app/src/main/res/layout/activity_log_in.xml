<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".LogIn">


    <RelativeLayout
        android:id="@+id/rel1"
        android:background="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/img"
            android:src="@drawable/icon"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:textColor="#004480"
            android:layout_below="@+id/img"
            android:text="Karate by Shihan Subhas Mitra"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout

        android:layout_marginTop="250dp"
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/rule1"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="25dp"
            android:textColor="#E91E63"
            android:text="Instractions"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:text="---------------------------------------------------------------------"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/rule1"
            android:id="@+id/rule2"
            android:textSize="18sp"
            android:textColor="#EC1E64"
            android:text="1. This app is only for Shihan Subhas Mitra's Students."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/rule2"
            android:id="@+id/rule3"
            android:textSize="18sp"
            android:textColor="#E91E63"
            android:text="2. Turn on internet when using this app."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/rule3"
            android:id="@+id/rule4"
            android:textSize="18sp"
            android:textColor="#E91E63"
            android:text="3. If you have not code ask to Shihan Subhas Mitra."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20sp"
        android:layout_below="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:textColorHint="#014A6A"
            android:id="@+id/code"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Enter Code"
            android:inputType="number" />



        <Button
            android:background="@drawable/button"
            android:id="@+id/login"
            android:layout_marginTop="15dp"
            android:text="Log in"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>


    </RelativeLayout>



</RelativeLayout>